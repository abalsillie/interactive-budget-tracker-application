{{!-- this is for the stylign of categories within teh categories.handelbars --}}

<!-- spend card-card.handlebars -->
<div class="card mb-3 d-flex justify-content-between" data-category-id="{{id}}">
  <div class="card-body d-flex justify-content-between align-items-center">
    <h5 class="card-title m-0">{{name}}</h5>
     <h5 class="card-title m-0">{{amount}}</h5>
    <div>
      <button class="btn btn-sm ms-2 edit-category" style="background-color: #3ed865; color: white;" data-id="{{id}}">Edit</button>
      <button class="btn btn-sm ms-2 delete-category" style="background-color: #ff69b4; color: white;" data-id="{{id}}">Delete</button>
    </div>
  </div>
</div>
