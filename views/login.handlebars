<div class="row mb-3 mt-3">
  <!-- Login Form -->
  <div class="col-md-6 px-md-5">
    <h1>Login</h1>
    <form class="login-form" id="login-form">
      <div class="mb-3">
        <label for="email-login" class="form-label">Email:</label>
        <input class="form-control" type="text" id="email-login" />
      </div>

      <div class="mb-5">
        <label for="password-login" class="form-label">Password:</label>
        <input class="form-control" type="password" id="password-login" />
      </div>

      <button type="submit" class="btn btn-primary" style="background-color: #ff69b4;">Log in</button>
    </form>
  </div>

  <!-- Registration Form -->
  <div class="col-md-6 px-md-5 ">
    <h1>Register</h1>
    <form class="register-form" id="register-form">
      <div class="mb-3">
        <label for="name-register" class="form-label">Name:</label>
        <input class="form-control" type="text" id="name-register" />
      </div>

      <div class="mb-3">
        <label for="email-register" class="form-label">Email:</label>
        <input class="form-control" type="text" id="email-register" />
      </div>

      <div class="mb-3">
        <label for="password-register" class="form-label">Password:</label>
        <input class="form-control" type="password" id="password-register" />
      </div>

      <div class="mb-3">
        <label for="confirm-password" class="form-label">Confirm Password:</label>
        <input class="form-control" type="password" id="confirm-password" />
      </div>

      <button type="submit" class="btn btn-primary" style="background-color: #ff69b4;">Register</button>
    </form>
  </div>
</div>
