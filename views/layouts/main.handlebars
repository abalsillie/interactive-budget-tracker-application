<body>
  <nav class="navbar navbar-expand-lg" style="background-color: #ff69b4; padding: 1rem 1rem;">
    <div class="container-fluid">
      <!-- Logo on the left -->
      <a class="navbar-brand" style="margin-right: auto;" onclick="location.href='/'">
        <img src="images/Logo.png" alt="Cossy Livs Budget" width="60" height="60">
      </a>
      <!-- Central title -->
      <div class="d-flex justify-content-center align-items-center w-100">
        <h2 class="m-0 text-white">Cossy Livs Budget</h2>
      </div>
      <!-- Navbar items -->
      <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <!-- if logged in button says log out, if logged out, button says log in -->
          <li class="nav-item">
            {{#if loggedIn}}
            <a id="logout" class="btn btn-outline-light py-2 px-3" style="background-color: #ff69b4;"
              href="/">LogOut</a>
            {{else}}
            <a href="/login" id="login" class="btn btn-outline-light py-2 px-3" style="background-color: #ff69b4;">Log
              In</a>
            {{/if}}
          </li>
        </ul>
      </div>
    </div>
  </nav>



  {{{ body }}}

  <footer class="footer mt-auto py-3" style="background-color: #3ed865;">
    <div class="container text-center">
      <span class="text-white">Project by Alexa, Faiza and Alex</span>
    </div>
  </footer>


